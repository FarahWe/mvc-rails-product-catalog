<h1>Index</h1>
<table>
  <thead>
    <tr>
      <th>id#</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to "Detalhes", product_path(product) %></td></td>
        <td><%= link_to "Editar", edit_product_path(product) %></td></td>
        <td><%= link_to "Excluir", product_path(product), method: :delete, data: { turbolinks: false } %></td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "+ Novo Produto", new_product_path %>