<h1>Edit Product</h1>
<%= form_for(@product) do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br />
 
  <%= f.label :description %><br />
  <%= f.text_area :description %><br />

  <%= f.label :price %><br />
  <%= f.text_field :price %><br />
  
  <%= f.submit %>
<% end %>
<%= link_to "Voltar", products_path %>